{
	"name": "southridge-copynonpii",
	"properties": {
		"activities": [
			{
				"name": "copydata_orders",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "SqlSource",
						"sqlReaderQuery": {
							"value": "SELECT * from orders WHERE UpdatedDate > '@{pipeline().parameters.LastRefreshDate}'",
							"type": "Expression"
						}
					},
					"sink": {
						"type": "AzureBlobFSSink",
						"copyBehavior": "PreserveHierarchy"
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "southridge_cs_orders",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ADLS_southridge_orders",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "copydata_orderdetails",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "SqlSource",
						"sqlReaderQuery": "SELECT * from OrderDetails WHERE UpdatedDate > '@{pipeline().parameters.LastRefreshDate}'"
					},
					"sink": {
						"type": "AzureBlobFSSink"
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "southridge_orderdetails",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "adls_orderdetails",
						"type": "DatasetReference"
					}
				]
			}
		],
		"parameters": {
			"LastRefreshDate": {
				"type": "String",
				"defaultValue": "2000-01-01"
			}
		}
	}
}