			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "southridge_streaming",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"structure": [
					{
						"name": "TransactionID",
						"type": "Guid"
					},
					{
						"name": "CustomerID",
						"type": "Guid"
					},
					{
						"name": "MovieID",
						"type": "Guid"
					},
					{
						"name": "StreamStart",
						"type": "DateTime"
					},
					{
						"name": "StreamEnd",
						"type": "DateTime"
					},
					{
						"name": "CreatedDate",
						"type": "Date"
					},
					{
						"name": "UpdatedDate",
						"type": "Date"
					}
				],
